{
  "name": "@seantrane/dotfiles",
  "description": "Backup, restore, and sync the prefs, settings and most important files on your machine.",
  "version": "1.0.0",
  "author": "@seantrane",
  "license": "MIT",
  "homepage": "https://github.com/seantrane/dotfiles#readme",
  "repository": "github:seantrane/dotfiles",
  "bugs": "https://github.com/seantrane/dotfiles/issues",
  "scripts": {
    "git:commit": "git-cz",
    "lint:md": "npm run markdownlint -- -i 'node_modules/' -c '.markdownlint.yaml' './'",
    "lint": "npm run lint:md",
    "markdownlint": "markdownlint",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/travis-cli": "^7.2.1",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.5",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.3",
    "marked": "^0.4.0",
    "markdownlint-cli": "^0.13.0",
    "semantic-release": "^15.10.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        80
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogTitle": "# CHANGELOG"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/github"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ],
    "npmPublish": false
  }
}
